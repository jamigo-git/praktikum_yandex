<div class="avatar__container">
    <div>
        {{#if avatar}}
            <img src="{{avatar}}" class="avatar_image" alt="user avatar">
        {{else}}
            <img src="{{default_avatar}}" class="avatar_image" alt="user avatar">
        {{/if}}
    </div>

    {{#if label}}<div class="avatar_label">{{label}}</div>{{/if}}
</div>
